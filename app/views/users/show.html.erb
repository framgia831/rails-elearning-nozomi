<div class="container-fluid main">
	<div class="row">
		<div class="col-md-1 center-block"></div>
		<div class="col-md-3 center-block">
			<div class="row">
				<div class="col-md-9 center-block">
            		<h2><strong>Profile</strong></h2>
            	</div>
            	<div class="col-md-2 center-block">
            		<% if current_user?(@user)%>
            		<%= button_to "Edit", edit_user_path(@user), 
					class: "btn btn-info btn-lg" %>
					<% else %>
					<% end %>
				</div>
			</div>
            <hr>
			<div class="row">
				<div class="col-md-1 center-block"></div>
				<div class="col-md-11 center-block">
            	<%= image_tag @user.image.url, id: :img_prev%>
            	<h3 class="mt-2"><strong><%= @user.name %></strong>
            		<small class="text-muted_dept">[@<%= @user.department %>]</small></h3>
				<h5><i class="fa fa-envelope" aria-hidden="true"></i><%= @user.email %></h5>
				<h5 class="text-success mt-4"><%= @user.biography %></h5>
				<p></p>

			<div class="row">
				<div class="col-md-6 center-block mb-1">
				<h5><%= @user.followers.count %> followers</h5>
				</div>
				<div class="col-md-6 center-block mb-1">
				<h5><%= @user.followed.count %> following</h5>
				</div>
			</div>
				<% if  current_user != @user %>
					<% if current_user.following?(@user) %>
					<%= button_to "Unfollow", current_user.relationship(@user), method: :delete,
							class: "btn btn-primary btn-block" %>
					<% else %>
					<%= button_to "Follow", relationships_path, 
							params: {followed_id: @user.id}, 
							class: "btn btn-success btn-block" %>
					<% end %>
				<% end %>
				</div>
			</div>
        </div>
        <div class="col-md-1"></div>
		<div class="col-md-6">
			<div class="container balloon1-left">
				<h3 class="mt-2"><i class="fa fa-book"></i><strong>Recent Activity</strong></h3>
				<hr>
				<div class="row">
					<% @activity.first(7).each do |activity| %>
					<div class="col-md-2 mb-4">
						<div class="img ml-5">
						<%= image_tag activity.user.image.url, id: :img_tumb%>
						</div>
					</div>
					<div class="col-md-10 mb-1">
					<% if activity.actionable_type == "Lesson" %>
					<% @lesson = Lesson.find(activity.actionable_id)%>
						<p class="activity-text"><%= activity.user.name %> learned <%= @lesson.answers.count %>/<%= @lesson.category.words.count %> words in <%= link_to @lesson.category.title, category_lesson_answers_path(category_id: @lesson.category.id, lesson_id: @lesson.id)%></p>
						<small class="text-muted">Posted <%= time_ago_in_words (@lesson.created_at) %> ago</small>
					<% elsif activity.actionable_type == "Relationship" %>
					<% @follow = Relationship.find(activity.actionable_id)%>
						<p class="activity-text"><%= activity.user.name %> followed <%= link_to @follow.followed.name, user_url(@follow.followed) %></p>				
						<small class="text-muted">Posted <%= time_ago_in_words (@follow.created_at) %> ago</small>
					<% end %>
					</div>					
					<% end %>
				</div>
			</div>
		</div>
		<div class="col-md-1"></div>
		</div>
	</div>
</div>