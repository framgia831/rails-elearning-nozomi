<!DOCTYPE html>
<html>
  <head>
    <title>E-Learning |sign up</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', 
    "https://fonts.googleapis.com/css?family=Berkshire+Swash|Marvel|Quicksand", 
    media: 'all', 'data-turbolinks-track': 'reload' %>

    <script src="https://code.jquery.com/jquery-2.2.4.min.js"></script>

    <%= javascript_include_tag 'application', 
    'data-turbolinks-track': 'reload' %>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">

  </head>

  <body>
  <header>
    <div class="container-fluid">

      <div class="jumbotron jumbotron-fluid text-white alpha60" style="background: url(<%= asset_path "top-image1.jpg" %>); background-size:cover;">

      <div class="row">
        <div class="col-md-7">
          <%= link_to "Framgia E-Learning", root_path, class: "logo"%>
        </div>

          <div class="col-md-5">
            <% if current_user %>
                 <nav class="navbar navbar-expand">
                    <div class="collapse navbar-collapse">
                      <ul class="navbar-nav">
                        <li class="nav-item">
                          <a class="nav-link" href="#">Users</a>
                        </li>
                        <li class="nav-item">
                          <a class="nav-link" href="#">Lessons</a>
                        </li>
                        <li class="nav-item">
                          <a class="nav-link" href="#">Dashboad</a>
                        </li>
                        <li class="nav-item">
                          <%= link_to "Profile", user_path(current_user), class: "nav-link" %>
                        </li>
                        <li class="nav-item">
                          <%= link_to "Logout", login_path, class: "nav-link", method: :delete %>
                        </li>
                      </ul>
                    </div>
                  </nav>
            <% else%>
                <%= form_for :session, url: login_path do |f| %>
                    <table>
                        <tr>
                            <td>
                              <div class="form-group">
                               <%= f.label :email %>
                               <%= f.email_field :email, class: "form-control" %>
                              </div>
                            </td>
                            
                            <td>
                              <div class="form-group">
                                <%= f.label :password %>
                                <%= f.password_field :password, class: "form-control" %>
                              </div>                              
                            </td>

                            <td class="login">
                                <%= f.submit "Login", class: "btn btn-success" %>
                            </td>
                        </tr>
                        <tr>
                            <td></td>
                            <td><a href="#">Forgot account?</a></td>
                            <td></td>
                        </tr>
                    </table>
                <% end %>
                <% end %>
            </div>
        </div>
      </div>
  </header>

    <%= yield %>
    <%= debug session[:user_id] %>
  
  </body>
</html>
